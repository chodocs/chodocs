{
  "name": "chodocs",
  "type": "module",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "description": "前端内容网站，包括学习路线、知识体系",
  "author": "Choi Yang<https://github.com/Chocolate1999>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chodocs/chodocs"
  },
  "bugs": {
    "url": "https://github.com/chodocs/chodocs/issues"
  },
  "keywords": [
    "react 专栏",
    "vue 专栏",
    "TypeScript 系列",
    "Next.js 实战",
    "Chocolate",
    "前端基础",
    "前端学习路线",
    "前端思维导图"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vitepress dev docs --port 8080 --max-old-space-size=50000",
    "build": "vitepress build docs",
    "serve": "vitepress serve docs",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp",
    "update": "esno scripts/update.ts"
  },
  "bumpp": {
    "execute": "esno scripts/update.ts && git add .",
    "commit": "chore: release v%s",
    "tag": true,
    "push": true
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@antfu/ni": "^28.2.0",
    "@iconify/json": "^2.2.433",
    "@types/fs-extra": "^11.0.4",
    "@types/md5": "^2.3.5",
    "@vite-pwa/vitepress": "^1.1.0",
    "bumpp": "^10.0.3",
    "cloudinary-build-url": "^0.2.4",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.2",
    "esno": "^4.8.0",
    "fast-glob": "^3.3.3",
    "feed": "^5.0.0",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "lint-staged": "^16.0.2",
    "md5": "^2.3.0",
    "medium-zoom": "^1.1.0",
    "moment": "^2.30.1",
    "ofetch": "^1.4.1",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "simple-git": "^3.28.0",
    "simple-git-hooks": "^2.13.1",
    "sitemap-ts": "^1.10.1",
    "typescript": "^5.9.3",
    "unocss": "^66.6.0",
    "unplugin-icons": "^23.0.1",
    "unplugin-vue-components": "^31.0.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitepress": "^2.0.0-alpha.16",
    "vue": "^3.5.27"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
