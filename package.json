{
  "name": "chodocs",
  "version": "0.1.7",
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "description": "新一代前端内容网站，包括学习路线、知识体系（用专栏形式更新）。",
  "author": "Choi Yang<https://github.com/Chocolate1999>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chodocs/chodocs"
  },
  "bugs": {
    "url": "https://github.com/chodocs/chodocs/issues"
  },
  "keywords": [
    "react",
    "vue",
    "TypeScript",
    "Next.js",
    "Chocolate"
  ],
  "scripts": {
    "dev": "nr update && vitepress dev docs --port 8080 --max-old-space-size=50000",
    "build": "nr update && vitepress build docs",
    "serve": "vitepress serve docs",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "update": "esno scripts/updateMetaData.ts",
    "release": "esno scripts/release.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.1",
    "@antfu/ni": "^0.18.8",
    "@iconify/json": "^2.2.7",
    "@types/fs-extra": "^11.0.0",
    "@types/md5": "^2.3.2",
    "bumpp": "^8.2.1",
    "eslint": "^8.33.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "gray-matter": "^4.0.3",
    "lint-staged": "^13.1.0",
    "md5": "^2.3.0",
    "ohmyfetch": "^0.4.21",
    "postcss": "^8.4.21",
    "postcss-nested": "^6.0.0",
    "simple-git": "^3.15.1",
    "simple-git-hooks": "^2.8.1",
    "sitemap-ts": "^1.1.0",
    "typescript": "^4.9.5",
    "unocss": "^0.48.3",
    "unplugin-icons": "^0.15.1",
    "unplugin-vue-components": "^0.22.12",
    "vite": "^4.0.4",
    "vitepress": "1.0.0-alpha.36",
    "vue": "^3.2.45"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
